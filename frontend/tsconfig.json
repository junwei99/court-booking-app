{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/book-venue/*": ["./src/modules/book-venue/*"],
      "@/common/*": ["./src/modules/common/*"]
    },
    "target": "es5",
    "downlevelIteration": true,
    "typeRoots": ["./node_modules/@types", "./modules/common/types"],
    "strict": true
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ],
  "noImplicitThis": false
}
